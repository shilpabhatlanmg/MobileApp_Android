<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg_bottom_separator"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_img_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:src="@drawable/dummy_user_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olof Kjebr"
        android:textColor="@color/colorTxtGray"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/user_img_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/last_chat_tv"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/last_chat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey come on 2nd floor"
        android:maxLines="1"
        android:textColor="@color/colorTxtGray"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/user_img_iv"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/user_name_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/chat_unread_badge_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/chat_unread_badge_size"
        app:layout_constraintWidth_min="@dimen/chat_unread_badge_size"
        app:layout_constraintWidth_default="wrap"
        android:text="2"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@drawable/chat_unread_badge_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"
        />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/last_chat_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:maxLines="1"
        android:textColor="@color/colorTxtLGray"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        />
</android.support.constraint.ConstraintLayout>
</layout>