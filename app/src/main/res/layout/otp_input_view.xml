<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<EditText
    android:id="@+id/otp_input_box_1"
    android:layout_width="55dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/text_input_background"
    android:elevation="2dp"
    android:textSize="30sp"
    android:textColor="@color/colorTxtBlack"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/otp_input_box_2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:layout_constraintVertical_chainStyle="packed"
    android:maxLines="1"
    android:inputType="number"
    android:imeOptions="actionNext"
    />
<EditText
    android:id="@+id/otp_input_box_2"
    android:layout_width="55dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/text_input_background"
    android:elevation="2dp"
    android:textSize="30sp"
    android:textColor="@color/colorTxtBlack"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    app:layout_constraintLeft_toRightOf="@id/otp_input_box_1"
    app:layout_constraintRight_toLeftOf="@id/otp_input_box_3"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:layout_constraintVertical_chainStyle="packed"
    android:maxLines="1"
    android:inputType="number"
    android:imeOptions="actionNext"
    />
<EditText
    android:id="@+id/otp_input_box_3"
    android:layout_width="55dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/text_input_background"
    android:elevation="2dp"
    android:textSize="30sp"
    android:textColor="@color/colorTxtBlack"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    app:layout_constraintLeft_toRightOf="@id/otp_input_box_2"
    app:layout_constraintRight_toLeftOf="@id/otp_input_box_4"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:layout_constraintVertical_chainStyle="packed"
    android:maxLines="1"
    android:inputType="number"
    android:imeOptions="actionNext"
    />
<EditText
    android:id="@+id/otp_input_box_4"
    android:layout_width="55dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/text_input_background"
    android:elevation="2dp"
    android:textSize="30sp"
    android:textColor="@color/colorTxtBlack"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    app:layout_constraintLeft_toRightOf="@id/otp_input_box_3"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:layout_constraintVertical_chainStyle="packed"
    android:maxLines="1"
    android:inputType="number"
    android:imeOptions="actionDone"
    />
</android.support.constraint.ConstraintLayout>
</layout>