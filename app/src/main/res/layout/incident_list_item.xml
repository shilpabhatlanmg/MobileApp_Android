<?xml version="1.0" encoding="utf-8"?>
<layout >

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:background="@drawable/fire_incident_strip_bg"
        android:layout_marginBottom="12dp"
        android:paddingLeft="5dp"
        >

        <TextView
            android:id="@+id/incident_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fire"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorTxtBlack"
            android:padding="12dp"
            />
        <TextView
            android:id="@+id/incident_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DLF Mall, Second Floor"
            android:textSize="16sp"
            android:textColor="@color/colorTxtGray"
            app:layout_constraintTop_toBottomOf="@id/incident_type_tv"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            />
        <TextView
            android:id="@+id/incident_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nov 26, 2018 10:28 am"
            android:textSize="14sp"
            android:textColor="@color/colorTxtLGray"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="12dp"
            android:layout_marginRight="5dp"
            />

            <com.protectapp.customview.AttendeeView
                android:id="@+id/attendee_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/incident_location_tv"
                />
    </android.support.constraint.ConstraintLayout>
</layout>